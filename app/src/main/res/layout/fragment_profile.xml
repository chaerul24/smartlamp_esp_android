<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_person"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bang Toyib"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textName"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgProfile"/>

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@gmail.com"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textName"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/textEmail"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_no_bg_blue">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_pencil"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Edit Profile" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEditProfile"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/textEmail"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_no_bg_blue">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_pencil"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Edit Profile" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAbout"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/llEditProfile"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_no_bg_blue">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_about"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="Tentang Aplikasi" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogout"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/llAbout"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_no_bg_red">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_logout"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CF0202"
            android:text="Logout" />


    </LinearLayout>

</RelativeLayout>